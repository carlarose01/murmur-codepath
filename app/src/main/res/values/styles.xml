<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PlayerSeekbar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#80ffffff</item>
        <item name="android:progressTint">#ffffff</item>
        <item name="android:colorControlActivated">#ffffff</item>
    </style>

    <style name="MurmurMediaButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/mr_player_button_states</item>
    </style>

    <style name="MurmurMediaButton.Rewind">
        <item name="android:src">@drawable/mr_rewind</item>
        <item name="android:contentDescription">@string/exo_controls_rewind_description</item>
    </style>

    <style name="MurmurMediaButton.FastForward">
        <item name="android:src">@drawable/mr_fast_forward</item>
        <item name="android:contentDescription">@string/exo_controls_fastforward_description</item>
    </style>

    <style name="MurmurMediaButton.Pause">
        <item name="android:src">@drawable/mr_pause</item>
        <item name="android:contentDescription">@string/exo_controls_pause_description</item>
    </style>

    <style name="MurmurMediaButton.Play">
        <item name="android:src">@drawable/mr_play</item>
        <item name="android:contentDescription">@string/exo_controls_play_description</item>
    </style>

    <style name="MurmurArtistTag">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:backgroundTint">@color/artist_tag_background</item>
        <item name="android:elevation">20dp</item>
        <item name="android:fontFamily">@font/josefin_sans_bold</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MurmurAutosizingHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="autoSizeMaxTextSize">28sp</item>
        <item name="autoSizeMinTextSize">18sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>